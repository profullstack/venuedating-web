# SvelteKit Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# PUBLIC VARIABLES (Available on client-side)
# These are exposed to the browser, so don't put sensitive data here
# =============================================================================

# Supabase Public Configuration
PUBLIC_SUPABASE_URL=https://whwodcfvmdhkzwjsxfju.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# App Configuration
PUBLIC_APP_NAME=BarCrush
PUBLIC_APP_URL=http://localhost:5173
PUBLIC_API_BASE_URL=http://localhost:5173

# =============================================================================
# PRIVATE VARIABLES (Server-side only)
# These are only available on the server and in API routes
# =============================================================================

# Supabase Service Role (Server-side only)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database Configuration
DATABASE_URL=your_database_url_here

# Authentication & Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_APP_ID=your_square_app_id
SQUARE_LOCATION_ID=your_square_location_id
SQUARE_WEBHOOK_SIGNATURE_KEY=your_square_webhook_signature_key
SQUARE_ENV=sandbox

# Email Service
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# SMS/Phone Verification
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Document Generation
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Development
NODE_ENV=development
PORT=5173

# Logging
LOG_LEVEL=info

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# File Storage
STORAGE_BUCKET=your_storage_bucket
STORAGE_REGION=your_storage_region

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# OPTIONAL VARIABLES
# =============================================================================

# For seeding specific venues (optional)
# TARGET_VENUE_IDS=123,456,789

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Error Tracking
SENTRY_DSN=your_sentry_dsn

# Feature Flags
ENABLE_DOCUMENT_GENERATION=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_PHONE_VERIFICATION=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# WebXR Configuration
ENABLE_WEBXR=false
